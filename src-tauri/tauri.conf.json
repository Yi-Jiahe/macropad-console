{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "macropad-console",
  "version": "0.1.0",
  "identifier": "com.macropad-console.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Macropad Console",
        "width": 800,
        "height": 600
      },
      {
        "title": "radial-menu",
        "url": "radial-menu.html",
        "label": "radial-menu",
        "visible": false,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "width": 300,
        "height": 300
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
